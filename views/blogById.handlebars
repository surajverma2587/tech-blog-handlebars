<main>
  {{> private-navbar}}

  <section>
    <div class="jumbotron text-center">
      <h1 class="display-4">{{title}}</h1>
      <h6>Posted By: {{user.username}}</h6>
      <hr />
      <p class="lead fs-3">{{content}}</p>
      <hr class="my-4">
      <p class="text-muted">Created At: {{createdAt}}</p>
      <p class="text-muted">Updated At: {{updatedAt}}</p>
      {{#if isMyBlog}}
        <div class="d-grid gap-2 col-sm-8 col-md-4 mx-auto">
          <a class="btn btn-primary" type="button" href="/blogs-edit/{{id}}">Edit Blog</a>
          <button class="btn btn-danger" id="delete-blog-btn" type="button" data-blog-id="{{id}}">Delete Blog</button>
        </div>
      {{/if}}
    </div>
  </section>

  <section class="container">
    Add Comment Form
  </section>

  <section class="container">
    All Comments
  </section>
</main>